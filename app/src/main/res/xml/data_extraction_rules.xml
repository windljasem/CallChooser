<?xml version="1.0" encoding="utf-8"?>
<!--
    Data Extraction Rules для CallChooser (Android 14+)
    
    Починаючи з Android 14, Google вимагає окремий файл для cloud backup.
    Це той самий функціонал що backup_rules.xml, але новий формат.
    
    ВАЖЛИВО: 
    - cloud-backup: Google Drive cloud backup (автоматичний)
    - device-transfer: Перенос на новий пристрій (через кабель)
    
    Обидва зберігають trial data → APK користувачі не можуть обійти trial!
-->
<data-extraction-rules>
    <!-- 
        Cloud Backup (Google Drive) 
        Автоматично кожні 24 години при Wi-Fi + зарядці
    -->
    <cloud-backup>
        <!-- Trial/Premium дані -->
        <include domain="sharedpref" path="callchooser.xml"/>
        
        <!-- User preferences (мова, тема) -->
        <include domain="sharedpref" path="CallChooserPrefs.xml"/>
    </cloud-backup>
    
    <!-- 
        Device Transfer (кабель старий → новий телефон)
        Також зберігає trial data
    -->
    <device-transfer>
        <!-- Trial/Premium дані -->
        <include domain="sharedpref" path="callchooser.xml"/>
        
        <!-- User preferences (мова, тема) -->
        <include domain="sharedpref" path="CallChooserPrefs.xml"/>
    </device-transfer>
</data-extraction-rules>
