<?xml version="1.0" encoding="utf-8"?>
<!--
    Android Backup Rules для CallChooser
    
    Цей файл визначає ЩО зберігається в Google Cloud Backup.
    
    ВАЖЛИВО: Зберігаємо ТІЛЬКИ trial/premium дані та preferences.
    Це дозволяє:
    1. Play Store користувачам зберегти trial при переустановці
    2. APK користувачам НЕ обійти trial (якщо раніше ставили через Play Store)
    
    Єдиний спосіб обійти: Factory Reset телефону (0.01% користувачів)
-->
<full-backup-content>
    <!-- 
        Включаємо callchooser.xml SharedPreferences
        Містить: install_date, premium_unlocked, dev_mode_enabled
    -->
    <include domain="sharedpref" path="callchooser.xml"/>
    
    <!-- 
        Включаємо CallChooserPrefs.xml SharedPreferences
        Містить: language, theme (user preferences)
    -->
    <include domain="sharedpref" path="CallChooserPrefs.xml"/>
    
    <!-- 
        Виключаємо все інше для privacy
        НЕ зберігаємо: databases, files, cache
    -->
    <exclude domain="sharedpref" path="."/>
    <exclude domain="database" path="."/>
    <exclude domain="file" path="."/>
    <exclude domain="cache" path="."/>
</full-backup-content>
