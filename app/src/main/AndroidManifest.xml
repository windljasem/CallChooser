<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ================== FORM FACTORS (телефони + планшети) ================== -->
    
    <!-- ✅ Підтримка різних розмірів екранів -->
    <supports-screens
        android:smallScreens="false"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:resizeable="true" />
    
    <!-- ✅ ЗМІНЕНО: telephony ОПЦІОНАЛЬНО (для WiFi-only планшетів) -->
    <!-- GSM дзвінки потрібні, але месенджери працюють і без SIM -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    
    <!-- ✅ Опціонально: мікрофон для голосового пошуку -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />
    
    <!-- ✅ Опціонально: сенсорний екран -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    
    <!-- ================== PERMISSIONS ================== -->
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    
    <!-- ✅ RECORD_AUDIO потрібен для голосового пошуку -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    
    <!-- ✅ Додаткова query для Android 11+ (покращує сумісність) -->
    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService"/>
        </intent>
        <!-- Query для месенджерів (Android 11+) -->
        <package android:name="com.whatsapp"/>
        <package android:name="org.telegram.messenger"/>
        <package android:name="com.viber.voip"/>
    </queries>
    
    <!-- ================== APPLICATION ================== -->
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"  
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        
        
        <activity
            android:name="com.callchooser.app.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|screenSize|screenLayout|smallestScreenSize"
            android:resizeableActivity="true">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
            <!-- ✅ Підтримка великих екранів (Android 12L+) -->
            <layout android:defaultWidth="840dp"
                    android:defaultHeight="600dp"
                    android:gravity="center"
                    android:minWidth="600dp"
                    android:minHeight="450dp" />
        </activity>
        
        <!-- ✅ Підтримка великих екранів (для Google Play) -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
        
    </application>
</manifest>
